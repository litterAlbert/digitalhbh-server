<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjgsu.digitalhbh.mapper.WorkMapper">
    <select id="selectAllWorks" resultType="Work">
        SELECT * FROM t_works
    </select>

    <select id="selectByClassify" resultType="Work">
        SELECT * FROM t_works WHERE classify = #{classify}
    </select>

    <select id="selectByTime" resultType="Work">
        SELECT * FROM t_works WHERE classify = #{classify} AND time = #{time}
    </select>



</mapper>
